<div class="clearfix"></div>
<div class="title_left">
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Admins</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li><a href="#"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <%= form_with(model: @admin, url: {controller: 'admins', action: 'create'}, local: true, class: "form-horizontal col-md-8 col-md-offset-1") do |form| %>
        <% if @admin.errors.any? %>
        <% @admin.errors.full_messages.each do |message| %>
        <script>
          alertify.set('notifier','position', 'top-right');
          alertify.error('<%= message %>');
        </script>
        <% end %>
        <% end %>

        <div class="form-group">
          <%= form.label :email, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.text_field :email, id: :admin_email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :first_name, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.text_field :first_name, id: :admin_first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :middle_name, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.text_field :middle_name, id: :admin_middle_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :last_name, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.text_field :last_name, id: :admin_last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :address, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.text_field :address, id: :admin_address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :phone, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.text_field :phone, id: :admin_phone, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :birthday, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.date_field :birthday, id: :admin_birthday, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :gender, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <label class="checkbox-inline"><%= form.radio_button :gender, "male", checked: true %>  Male</label>
            <label class="checkbox-inline"><%= form.radio_button :gender, "female" %> Female</label>
            <label class="checkbox-inline"><%= form.radio_button :gender, "ohter" %> Other</label>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :role, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= form.select :role_id, options_for_select(@roles.map{ |c| [c.name, c.id]}, selected:
              @roles.select {|c| c.name == 'Mod'}.first.id), {
               id: 'role', required: true, class: "form-control"
            }%>
           </div>
        </div>

        <div class="actions">
          <%= form.submit 'Create Admin', class: "btn btn-primary pull-right" %>
          <%= link_to 'Back', admins_path, class: "btn btn-default pull-right" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
<br>
<div class="clearfix"></div>
