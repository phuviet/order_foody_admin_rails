<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password digest</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Middle name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Avatar</th>
      <th>Auth token</th>
      <th>Confirm send at</th>
      <th>Confirm token</th>
      <th>Confirm at</th>
      <th>Reset send at</th>
      <th>Reset token</th>
      <th>Deleted at</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.middle_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.gender %></td>
        <td><%= user.birthday %></td>
        <td><%= user.avatar %></td>
        <td><%= user.auth_token %></td>
        <td><%= user.confirm_send_at %></td>
        <td><%= user.confirm_token %></td>
        <td><%= user.confirm_at %></td>
        <td><%= user.reset_send_at %></td>
        <td><%= user.reset_token %></td>
        <td><%= user.deleted_at %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

